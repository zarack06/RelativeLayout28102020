<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/view1"
        android:text="1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#e8d33636" />
    <TextView
        android:id="@+id/view2"
        android:text="2"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#E8292424" />
    <TextView
        android:id="@+id/view3"
        android:text="3"
        android:layout_alignParentBottom="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#E8292424" />
    <TextView
        android:id="@+id/view4"
        android:text="4"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#E8317A5D" />
    <TextView
        android:id="@+id/view5"
        android:text="5"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#0C2091" />
    <TextView
        android:id="@+id/view6"
        android:text="6"
        android:layout_toLeftOf="@id/view5"
        android:layout_below="@id/view5"
        android:layout_toEndOf="@id/view5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#E8317A5D" />
    <TextView
        android:id="@+id/view7"
        android:text="7"
        android:layout_toLeftOf="@id/view5"
        android:layout_above="@id/view5"
        android:layout_toEndOf="@id/view5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#E8317A5D" />
    <TextView
        android:id="@+id/view8"
        android:text="8"
        android:layout_toLeftOf="@id/view5"
        android:layout_above="@id/view5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#E8317A5D" />
    <TextView
        android:id="@+id/view9"
        android:text="9"
        android:layout_toLeftOf="@id/view5"
        android:layout_below="@id/view5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#E8317A5D" />
</RelativeLayout>